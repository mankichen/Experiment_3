<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/test_1_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="绑定到标签"/>

        <Button
            android:id="@+id/test_1_internal_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="内部类"/>

        <Button
            android:id="@+id/test_1_external_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="外部类"/>

        <Button
            android:id="@+id/test_1_u_interal_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="匿名内部类"/>

        <Button
            android:id="@+id/test_1_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activity"/>

        <Button
            android:id="@+id/test_1_bind_lable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="绑定到标签"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>